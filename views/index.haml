%ul#resource_tabs.nav.nav-tabs
    %li.active
        %a{:href=>"#tab_job", :"data-toggle"=>"tab"} Jobs
    %li
        %a{:href=>"#tab_config", :"data-toggle"=>"tab"} Configuration Files
    %li
        %a{:href=>"#tab_kickstart", :"data-toggle"=>"tab"} Kickstarts

.tab-content
    #tab_job.tab-pane.fade.in.active
        %p{:style=>"font-size:1.5em"}
            %a{:href => "/job"}
                %i.icon-plus-sign &nbsp;Job

        %table#jobs_table.table.table-striped.table-bordered


    #tab_config.tab-pane.fade
        %p{:style=>"font-size:1.5em"}
            %a{:href => "/cfg"}
                %i.icon-plus-sign &nbsp;Cfg

        %table.table.table-striped.table-bordered
            %thead
                %tr
                    %td
                        %b Name
                    %td
                        %b Date
                    %td
                        %b Open
                    %td
                        %b Delete
            %tbody
                - user.cfgs.each do |cfg|
                    %tr
                        %td
                            = cfg[:name]
                        %td
                            = cfg[:created_at]

                        %td
                            %form.strip{:action=>"/cfg/#{cfg[:id]}", :method=>"get"}
                                %button.btn.btn-primary{:type=>"submit"} Open
                        %td
                            %form.strip{:action=>"/cfg/#{cfg[:id]}", :method=>"post"}
                                %input{:type=>"hidden",:name=>"_method",:value=>"delete"}
                                %button.btn.btn-danger{:type=>"submit"} Delete

    #tab_kickstart.tab-pane.fade
        %p{:style=>"font-size:1.5em"}
            %a{:href => "/kickstart"}
                %i.icon-plus-sign &nbsp;Kickstart

        %table.table.table-striped.table-bordered
            %thead
                %tr
                    %td
                        %b Name
                    %td
                        %b Date
                    %td
                        %b Open
                    %td
                        %b Delete
            %tbody
                - user.kickstarts.each do |ks|
                    %tr
                        %td
                            = ks[:name]
                        %td
                            = ks[:created_at]
                        %td
                            %form.strip{:action=>"/kickstart/#{ks[:id]}", :method=>"get"}
                                %button.btn.btn-primary{:type=>"submit"} Open
                        %td
                            %form.strip{:action=>"/kickstart/#{ks[:id]}", :method=>"post"}
                                %input{:type=>"hidden",:name=>"_method",:value=>"delete"}
                                %button.btn.btn-danger{:type=>"submit"} Delete




