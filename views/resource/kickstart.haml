%h1 New Kickstart

- if errors
    .errors.alert.alert-error
        %ul
            - errors.each do |field, error_list|
                %li
                    field <b>#{field}</b>:
                    %ul
                        - error_list.each do |error_msg|
                            %li
                                =error_msg


%form.new_resource{:action => action_url, :method => 'POST'}
    %table
        %tr
            %td
                Name
            %td
                %input{:type => 'text', :name => "name", :value => resource[:name]}
        %tr
            %td
                Body
            %td
                %textarea{:name => "body"}= resource[:body]

    %input{:type => "hidden", :name => "id", :value => resource[:id]}
    %input{:type => "hidden", :name => "_method", :value => action_method}
    %input{:type =>"submit"}

- if revs.count > 1
    %h2 Old revisions
    %ul
    - revs.each_with_index do |rev,i|
        - next if i == 0
        %li
            %a{:href=>"/kickstart/#{resource[:id]}/rev/#{rev[:id]}"}
                =rev[:created_at]
