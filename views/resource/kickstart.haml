%h1 New Kickstart

- if errors
    .errors.alert.alert-error
        %ul
            - errors.each do |field, error_list|
                %li
                    field <b>#{field}</b>:
                    %ul
                        - error_list.each do |error_msg|
                            %li
                                =error_msg


%form.new_resource.form-horizontal{:action => action_url, :method => 'POST'}
    .control-group
        %label.control-label{:for=>"inputName"} Name
        .controls
            %input#inputName{:type=>"text", :name=>"name", :placeholder=>resource[:name]}

    .control-group
        %label.control-label{:for=>"kickstart-select"}
        .controls
            #kickstart-select.btn-group{:"data-toggle"=>"buttons-radio"}
                %button.btn.active{:type=>"button",:value=>"existing"}
                    Edit Kickstart
                %button.btn{:type=>"button",:value=>"new"}
                    Import Kickstart

    #new-kickstart
        .control-group
            %label.control-label{:for=>"textareaBody"} Body
            .controls
                - if resource[:body].nil?
                    %textarea#textareaBody{:name => "body"}= TEMPLATE_KICKSTART
                - else
                    %textarea#textareaBody{:name => "body"}= resource[:body]

    #import-kickstart{:style=>"display: none;"}
        .control-group
            %label.control-label{:for=>"inputImportKS"} Type
            .controls
                %select#inputImportKS{:name=>"ks_template"}
                    %option{:value=>"kvm", :selected=>"yes"} KVM
                    %option{:value=>"mock"} Mock

        .control-group
            %label.control-label{:for=>"textareaBodyImport"} Body
            .controls
                %textarea#textareaBodyImport{:name => "bodyImport"}

    .control-group
        %label.control-label{:for=>"submitButton"}
        .controls
            %input{:type =>"submit"}

    %input{:type => "hidden", :name => "id", :value => resource[:id]}
    %input{:type => "hidden", :name => "_method", :value => action_method}

- if revs.count > 1
    %h2 Old revisions
    %ul
    - revs.each_with_index do |rev,i|
        - next if i == 0
        %li
            %a{:href=>"/kickstart/#{resource[:id]}/rev/#{rev[:id]}"}
                =rev[:created_at]
