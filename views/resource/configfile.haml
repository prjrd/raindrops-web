%h1 New Config File

- if errors
    %errors
        %ul
            - errors.each do |field, error_list|
                %li
                    field <b>#{field}</b>:
                    %ul
                        - error_list.each do |error_msg|
                            %li
                                =error_msg


%form{:action => action_url, :method => 'POST'}
    %table
        %tr
            %td
                name
            %td
                %input{:type => 'text', :name => "name", :value => resource[:name]}
        %tr
            %td
                body
            %td
                %textarea{:name => "body"}
                    = resource[:body]

    %input{:type => "hidden", :name => "id", :value => resource[:id]}
    %input{:type =>"submit"}
