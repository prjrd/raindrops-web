!!! 5
%html(lang="en")
    %head

        <!-- Bootstrap -->
        %link{:href=>"/css/bootstrap.min.css", :rel=>"stylesheet"}
        %link{:href=>"/css/font-awesome.css", :rel=>"stylesheet"}

        %script{:type=>'text/javascript',
            :src=>'//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js'}
        %script{:type=>'text/javascript', :src=>'/js/bootstrap.min.js'}
        <!-- End Bootstrap -->

        %script{:type=>'text/javascript', :src=>'/js/raindrops.js'}
        %link{:href=>"/css/raindrops.css", :rel=>"stylesheet"}
        %title Raindrops
    %body
        #wrap
            .container
                .navbar.navbar-inverse.navbar-fixed-top
                    .navbar-inner
                        .container
                            %a.btn.btn-navbar(data-toggle="collapse" data-target=".nav-collapse")
                                %span.icon-bar
                                %span.icon-bar
                                %span.icon-bar
                            %a.brand{:href => "/"} Raindrops Beta
                            .nav-collapse.collapse
                                %ul.nav.pull-right
                                    %li.dropdown
                                        %a.dropdown-toggle(data-toggle="dropdown" href="#contact")
                                            Login
                                            %b.caret
                                        %ul.dropdown-menu
                                            %li
                                                %a(href='/auth/github')
                                                    %i.icon-github
                                                    &nbsp;Sign in with GitHub
                                            %li
                                                %a(href='/auth/twitter')
                                                    %i.icon-twitter
                                                    &nbsp;Sign in with Twitter


            .container.main-container
                .login-section
                    .row
                        .span12
                            .main-title
                                %h1
                                    Welcome to Raindrops!
                    .row
                        .span6.offset3{:style=>"text-align:center;"}
                            A service that will build disk images for you ready
                            to be used in your favourite cloud or virtualised
                            environment.
                    .row
                        .span4.offset4
                            .login-box
                                %ul
                                    %a.btn(href='/auth/github')
                                        %i.icon-github
                                        &nbsp;Sign in with GitHub
                                    %a.btn(href='/auth/twitter')
                                        %i.icon-twitter
                                        &nbsp;Sign in with Twitter

            #push

        %footer
            &copy; Karanbir Singh & Jaime Melis, 2012-2013
            %br
            %a{:href=>"http://www.peer1.com/"}
                Powered By PEER 1 Managed Hosting
                %img{:src=>"/img/peer1.png",
                :alt=>"Managed Hosting by PEER 1", :width=>"88", :height=>"31"}
